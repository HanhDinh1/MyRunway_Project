<h2>Create an outfit</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/outfit/create" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Title:
          <input type="text" name="title" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Outfit Image:
          <input type="file" name="outfit-image" class="form-control-file" />
        </label>
      </div>

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>